<div class="rating-card {{#if small}}rating-card--small{{/if}} {{#if stars}}rating-card--stars{{/if}} {{#if
        energy}}rating-card--energy{{/if}}">
  <div class="rating-card__value">
    {{#if stars}}
      <i class="rating-card__item rating-card__item--active"></i>
      <i class="rating-card__item rating-card__item--active"></i>
      <i class="rating-card__item rating-card__item--active"></i>
      <i class="rating-card__item"></i>
      <i class="rating-card__item"></i>
    {{/if}}
    {{#if energy}}
      <i class="rating-card__item rating-card__item--active"></i>
      <i class="rating-card__item rating-card__item--active"></i>
      <i class="rating-card__item"></i>
    {{/if}}
    {{#if views}}
      <span class="rating-card__views">{{views}}</span>
    {{/if}}
  </div>
  {{#if label}}
    <span class="rating-card__label">{{label}}{{#if label-bold}} <b>{{label-bold}}</b>{{/if}}</span>
  {{/if}}
</div>
