<header class="page-header">
  <div class="container">
    <div class="page-header__wrapper">
      <div class="page-header__back">
        <a href="#" class="page-header__back-link">Back to main</a>
      </div>
      <div class="page-header__inner">
        <h1 class="page-header__title {{#if success}}page-header__title--success{{/if}}">{{ title }}</h1>
        {{#if text}}<p class="page-header__text">{{ text }}</p>{{/if}}
      </div>
    </div>
  </div>
</header>
