{{#> modules/carousel/_component full-slide=true title=title see-all=true}}
  {{#times 3}}
    <div class="swiper-slide carousel__slide js-carousel__item">
      <div class="carousel__slide-row">
        <div class="carousel__slide-cell">
          {{> widgets/course-card
                  image="carousel/small_01"
                  title="Customizing Type with Draplin: Creating Wordmarks That Work"
                  author="by Gustavo Bator"
          }}
        </div>
        <div class="carousel__slide-cell">
          {{> widgets/course-card
                  image="carousel/small_02"
                  title="Productivity Masterclass: Create a Custom System that Works"
                  author="by Ann Dokidis"
          }}
        </div>
        <div class="carousel__slide-cell">
          {{> widgets/course-card
                  image="carousel/small_03"
                  title="ODD BODIES: Illustrating Expressive, Stylized People"
                  author="by Adison Siphron"
          }}
        </div>
        <div class="carousel__slide-cell">
          {{> widgets/course-card
                  image="carousel/small_04"
                  title="Fundamentals of DSLR Photography"
                  author="by Marley Torff"
          }}
        </div>
      </div>
    </div>
  {{/times}}
{{/modules/carousel/_component}}
