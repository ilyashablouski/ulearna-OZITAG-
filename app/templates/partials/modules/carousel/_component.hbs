<div class="carousel">
  {{#if title}}
    <header class="carousel__header">
      <h2 class="carousel__title {{#if see-all}}{{else}}carousel__title--big{{/if}}">{{ title }}</h2>
      {{#if see-all}}
        <div class="carousel__right">
          {{> ui/btn-arrow no-mobile-arrow=true label="See all"}}
        </div>
      {{/if}}
    </header>
  {{/if}}

  <div class="carousel__inner js-carousel" {{#if full-slide}}data-carousel-full="1"{{/if}} {{#if big}}data-carousel-big="1"{{/if}}>
    {{#if tabs}}
      <div class="carousel__tabs">
        <div class="tabs">
          <div class="tabs__inner">
            <div class="tabs__item">
              <button data-filter="*" class="js-carousel__tab tabs__link active">All Categories</button>
            </div>
            <div class="tabs__item">
              <button data-filter="filter-1" class="js-carousel__tab tabs__link">Business</button>
            </div>
            <div class="tabs__item">
              <button data-filter="filter-2" class="js-carousel__tab tabs__link">Category</button>
            </div>
            <div class="tabs__item">
              <button data-filter="filter-3" class="js-carousel__tab tabs__link">Category</button>
            </div>
            <div class="tabs__item">
              <button data-filter="filter-4" class="js-carousel__tab tabs__link">Category</button>
            </div>
            <div class="tabs__item">
              <button data-filter="filter-5" class="js-carousel__tab tabs__link">Category</button>
            </div>
          </div>
        </div>
      </div>
    {{/if}}
    <div class="carousel__slider {{#if full-slide}}carousel__slider--full{{/if}}">
      <div class="carousel__prev">
        <button class="button-nav button-nav--prev js-carousel__prev"></button>
      </div>
      <div class="carousel__next">
        <button class="button-nav button-nav--next js-carousel__next"></button>
      </div>
      <div class="carousel__row">
        <div class="swiper-container js-carousel__slider">
          <div class="swiper-wrapper">
            {{> @partial-block}}
          </div>

          {{#if swiper-scrollbar}}
            <div class="swiper-scrollbar"></div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
  {{#if bottom-button}}
    <div class="carousel__bottom">
      {{> ui/btn color="black" transparent=true label=bottom-button}}
    </div>
  {{/if}}
</div>
