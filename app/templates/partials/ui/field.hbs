<div class="form-field {{#if error}}form-field--error{{/if}}">
  <label class="form-field__label" for="{{id}}">{{label}}</label>
  <div class="form-field__input">
    {{> @partial-block}}
  </div>
  {{#if note}}<span class="form-field__note">{{ note }}</span>{{/if}}
  {{#if error}}<span class="form-field__error">{{ error }}</span>{{/if}}
</div>
