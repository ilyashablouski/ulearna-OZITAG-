<div class="signup-plans">
  <h2 class="signup-plans__title">Choose your personal learning plan</h2>
  <div class="signup-plans__row  js-plan-select">
    <input type="hidden" value="1" class="js-plan-select__value"/>
    <div class="signup-plans__inner">
      <div class="signup-plans__cell">
        {{> widgets/plan-card value="1" mod="js-plan-select__item"
                icon="signup/plan_01"
                title="Learner"
                text="For whom/desctiption text"
                price="8"
                feature-1="Сourses are only available in English"
                feature-2="Subscription feature description"
                note="Start for Free trial 3 days"
        }}
      </div>
      <div class="signup-plans__cell">
        {{> widgets/plan-card value="2" mod="js-plan-select__item"
                icon="signup/plan_02"
                title="Student"
                text="For whom/desctiption text"
                price="8"
                feature-1="Сourses are only available in English" feature-1-enabled=true
                feature-2="Subscription feature description" feature-2-enabled=true
                feature-3="Subscription feature description" feature-3-enabled=true
                feature-4="Subscription feature description" feature-4-enabled=true
                note="Start for Free trial 3 days"
        }}
      </div>
    </div>
  </div>
</div>
