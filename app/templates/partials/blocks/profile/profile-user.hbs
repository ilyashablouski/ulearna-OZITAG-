<div class="profile-user">
  <div class="profile-user__img">
    {{#ifCond profile "student"}}
      {{> components/image img="profile/student/avatar" img-mobile="profile/student/avatar-mobile" ext="jpg" no-2x=true}}
    {{/ifCond}}

    {{#ifCond profile "instructor"}}
      {{> components/image img="profile/instructor/avatar" img-mobile="profile/instructor/avatar-mobile" ext="jpg" no-2x=true}}
    {{/ifCond}}
  </div>
  <div class="profile-user__info">
    <span class="profile-user__name">{{name}}</span>
    <a href="mailto:Ali_Kazal@mail.com" class="profile-user__email">{{email}}</a>
  </div>
</div>
