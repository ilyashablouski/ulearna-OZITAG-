<form class="chat-form" action="#" method="post">
  <div class="chat-form__input">
    {{> ui/textarea rows=1 placeholder="Type message" mod="form-input--no-scrollbar"}}
  </div>

  <div class="chat-form__group">
    <div class="chat-form__attach-btn">
      {{> ui/file-input icon='button-attach' label='Attach file'}}
    </div>

    <div class="chat-form__submit">
      {{> ui/btn color="blue" type="submit" label="Send" icon="arrow-right-small" icon-right=true }}
    </div>
  </div>
</form>
