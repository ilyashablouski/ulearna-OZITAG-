<div class="tab-lessons">
  <div class="tab-lessons__wrapper">
    {{> blocks/create-course/lessons/upload-lesson}}

    <div class="tab-lessons__separator">
      <div class="tab-lessons__separator-line">
        <div class="tab-lessons__separator-triangle">
        </div>
      </div>
    </div>

    <span class="tab-lessons__title">Course playlist</span>
    <div class="tab-lessons__playlist js-drag-sortable">
      {{>blocks/create-course/lessons/lessons-playlist-row
        image="course-lesson_01"
        text="Customizing Type with Draplin: Creating Wordmarks That Work"
        copyright=true
        intro=true
      }}

      {{>blocks/create-course/lessons/lessons-playlist-row
        image="course-lesson_02"
        text="Customizing Type with Draplin: Creating Wordmarks That Work"
        copyright=true
      }}

      {{>blocks/create-course/lessons/lessons-playlist-row
        image="course-lesson_03"
        text="Customizing Type with Draplin: Creating Wordmarks That Work"
        copyright=true
      }}

      {{>blocks/create-course/lessons/lessons-playlist-row
        image="course-lesson_04"
        text="Customizing Type with Draplin: Creating Wordmarks That Work"
        copyright=true
      }}
    </div>
  </div>

  {{> blocks/create-course/course-page-separator}}

  <div class="tab-lessons__wrapper">
    <div class="tab-lessons__slider">
      <span class="tab-lessons__slider-title">Select a Course Thumbnail</span>
      <span class="tab-lessons__slider-label">Choose thumbnail for your course lessonâ€™s video covers or upload personal cover image</span>

      <div class="tab-lessons__slider-main">
        {{> modules/carousel/create-course}}
      </div>
    </div>

    <div class="tab-nav-buttons">
      <div class="tab-nav-buttons__btn">
        {{> ui/btn
          outline=true
          transparent=true
          label = "Back"
          href="/html/filled.html"
          icon="button-arrow-prev"
          btn-mode="large"
          w100 = true
        }}
      </div>

      <div class="tab-nav-buttons__btn">
        {{> ui/btn
          color = "blue"
          label = "Next"
          icon="button-arrow-next"
          icon-right = true
          btn-mode="large"
          w100 = true
        }}
      </div>
    </div>

  </div>
</div>
